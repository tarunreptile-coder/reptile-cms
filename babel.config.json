{
  "presets": [
    ["@babel/preset-env", { "targets": "defaults" }],
    "@babel/preset-react",
    ["@babel/preset-typescript", { "allowDeclareFields": true }]
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/plugin-proposal-object-rest-spread",
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-transform-arrow-functions",
    ["@babel/plugin-proposal-private-methods", { "loose": false }],
    ["@babel/plugin-transform-classes", { "loose": false }],
    [
      "@babel/plugin-proposal-class-properties",
      { "loose": false }
    ],
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          
          // CRITICAL FIXES FOR RELATIVE PATH ERRORS:
          // 1. Shallow relative path errors (from src/index.tsx):
          "./Components/Atoms": "./src/Components/Atoms",
          "./Components/Organisms": "./src/Components/Organisms",
          "./Components/Pages": "./src/Components/Pages",

          // 2. Medium relative path errors (from src/Hooks):
          "../Components/Atoms": "./src/Components/Atoms", 
          "../Components/Organisms": "./src/Components/Organisms",
          
          // 3. Deep relative path errors (from src/Store/...):
          "../../../Components/Atoms": "./src/Components/Atoms",
          "../../../Components/Organisms": "./src/Components/Organisms",
          // The other one from the logs:
          "../../Components/Atoms": "./src/Components/Atoms",
          "../../Components/Organisms": "./src/Components/Organisms",

          // EXISTING ALIASES (keep these for files using the absolute alias)
          "@Reptile/Assets": "./src/Assets",
          "@Reptile/Components": "./src/Components",     
          "@Reptile/Components/Atoms": "./src/Components/Atoms",
          "@Reptile/Components/Organisms": "./src/Components/Organisms",
          "@Reptile/Constants": "./src/Constants",
          "@Reptile/Contexts": "./src/Contexts",
          "@Reptile/Framework": "./src/Framework",
          "@Reptile/Hooks": "./src/Hooks",
          "@Reptile/Services": "./src/Services",
          "@Reptile/Store": "./src/Store",
          "~": "./src"
        }
      }
    ]  
  ]
}